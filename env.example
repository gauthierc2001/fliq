# Example environment variables
# Copy this to .env for local development
# Set these in Railway's environment variables for production

# Database - Railway PostgreSQL or local instance
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Secret - Generate a strong secret (32+ chars)
JWT_SECRET="your_super_secret_jwt_key_change_in_production"

# Solana Network - Use "mainnet-beta" for production, "devnet" for testing
NEXT_PUBLIC_SOLANA_NETWORK="devnet"

# CoinGecko API Key - Optional but recommended for higher rate limits
COINGECKO_API_KEY=""

# Twitter OAuth 2.0 - For user profiles and leaderboard
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# Base URL - Update for production deployment
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Example Railway production values:
# DATABASE_URL="postgresql://postgres:password@postgres.railway.internal:5432/railway"
