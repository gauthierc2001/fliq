# Copy this file to .env and fill in your actual values

# Database - Replace with your Railway PostgreSQL connection string
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Secret - Use a strong, unique secret for production
JWT_SECRET="your_super_secret_jwt_key_change_in_production"

# Solana Network - Use "mainnet-beta" for production, "devnet" for testing
NEXT_PUBLIC_SOLANA_NETWORK="mainnet-beta"

# CoinGecko API Key - Optional but recommended for higher rate limits
COINGECKO_API_KEY=""

# Twitter OAuth 2.0 - For user profiles and leaderboard
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# Base URL - Update for production deployment
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

